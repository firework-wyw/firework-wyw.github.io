<article<% if (index) { %> class="article-index"<% } %>>
    <% if (index) { %>
        <h2><a href="<%- config.root %><%- post.path %>"><%- post.title %></a></h2>
    <% } else { %>
        <h1><%- post.title %></h1>
    <% } %>

    <div class="article-meta">
        <%- partial('post/author') %>
        <%- partial('post/date') %>
        <%- partial('post/tag') %>
    </div>

    <% if (index && post.excerpt) { %>
    <section>
        <%- post.excerpt %>
        <a class="article-readmore" href="<%- config.root %><%- post.path %>"><%- (config.excerpt_link || '阅读全部') %></a>
    </section>
    <% } else { %>
        <%- post.content %>
    <% } %>
</article>
<% if (!index) { %>
<div class="article-license">
    <a rel="license" href="http://creativecommons.org/licenses/by/4.0/"><img alt="知识共享许可协议" src="/img/cc-by.png" width="80" height="15"></a>
</div>
<nav class="article-pagination">
    <% if (page.prev) { %>
    <a href="<%- config.root %><%- page.prev.path %>" class="article-prev">前一篇: <%- page.prev.title %></a>
    <% } %>
    <% if (page.next) { %>
    <a href="<%- config.root %><%- page.next.path %>" class="article-next">后一篇: <%- page.next.title %></a>
    <% } %>
</nav>

<%- partial('_partial/post/share') %>
<%- partial('_partial/post/comment') %>
<% } %>
